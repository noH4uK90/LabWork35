<Page x:Class="LabWork35.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabWork35.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <StackPanel>
        <TextBlock Text="Логин:" FontSize="24"/>
        <TextBox FontSize="24"/>
        <TextBlock Text="Пароль:" FontSize="24"/>
        <TextBox FontSize="24"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Войти" FontSize="24" Width="300" Margin="10" Click="LoginButton_Click"/>
            <Button Content="Зарегистрироваться" FontSize="24" Width="300" Margin="10" Click="RegistrationButton_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
